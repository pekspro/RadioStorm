<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:player="clr-namespace:Pekspro.RadioStorm.UI.ViewModel.Player;assembly=Pekspro.RadioStorm.UI"
            xmlns:views="clr-namespace:Pekspro.RadioStorm.MAUI.Views"
            x:Class="Pekspro.RadioStorm.MAUI.Views.PlayerPositionControl"             
            x:DataType="player:PlayerViewModel"
            HeightRequest="36"
            >
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
    </Grid.ColumnDefinitions>

    <Button Grid.Column="0"
            Text="{Binding SeekSizeViewModel.RewindSize, Converter={StaticResource TimeSpanToSeekSizeStringConverter}}"
            Command="{Binding RewindCommand}"
            Style="{StaticResource TextPlayerButton}"
            IsVisible="{Binding IsCurrentItemLiveAudio, Converter={StaticResource InvertedBoolConverter}}"
            Margin="{OnPlatform Default=0, WinUI='8,0,0,0'}"
            />

    <Label  Grid.Column="1" 
            Text="{Binding PositionString, Mode=OneWay}"
            VerticalTextAlignment="Center" 
            Padding="4,0,0,0"
            />

    <Slider x:Name="ProgressSlider"
            Grid.Column="2" 
            HeightRequest="{OnPlatform Default=40, WinUI=32}"
            Margin="{OnPlatform Default=0, WinUI='8,0'}"
            DragStarted="ProgressSlider_DragStarted" 
            ValueChanged="ProgressSlider_ValueChanged"
            DragCompleted="ProgressSlider_DragCompleted" />

    <Label  Grid.Column="3"
            Text="{Binding MediaLengthString, Mode=OneWay}" 
            VerticalTextAlignment="Center" 
            Padding="0,0,4,0"
            />

    <Button Grid.Column="4"
            Text="{Binding SeekSizeViewModel.ForwardSize, Converter={StaticResource TimeSpanToSeekSizeStringConverter}}"
            Command="{Binding ForwardCommand}"
            Style="{StaticResource TextPlayerButton}"
            IsVisible="{Binding IsCurrentItemLiveAudio, Converter={StaticResource InvertedBoolConverter}}"
            />
</Grid>